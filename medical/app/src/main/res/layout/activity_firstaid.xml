<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Firstaid"
    android:layout_gravity="center"
    >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"

     android:background="@color/purple_700"
     android:orientation="vertical"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent">
  <RelativeLayout
      android:id="@+id/llActionbar"
      android:layout_width="match_parent"
      android:layout_height="60dp"

      >

   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/imgViewBack"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:background="?attr/selectableItemBackgroundBorderless"
       android:padding="15sp"

       app:srcCompat="@drawable/back_arrow" />


   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/tvTitle"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_centerHorizontal="true"
       android:fontFamily="@font/euclidcirculara_medium"
       android:gravity="center"
       android:lines="1"
       android:padding="5dp"
       android:text="First AID Info"
       android:textColor="@color/white"
       android:textSize="20sp"
       android:textStyle="bold" />


  </RelativeLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/round_shape_from_top"
     android:orientation="vertical"

     android:padding="5dp">

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/sci"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/button_login_fill"
      android:text="SPINAL CORD INJURY"
      android:textColor="#FFF"
      android:textSize="@dimen/spacing_18"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_password" />
  <Button
      android:id="@+id/sas"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/button_login_fill"
      android:text="Signs and symptoms"
      android:textColor="#FFF"
      android:visibility="gone"
      android:textSize="@dimen/spacing_18"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_password" />
  <Button
      android:id="@+id/sei"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/button_login_fill"
      android:text="SEIZURES"
      android:textColor="#FFF"
      android:textSize="@dimen/spacing_18"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_password" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/cri"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="50dp"
      android:background="@drawable/button_login_fill"
      android:text="CPR"
      android:textColor="#FFF"
      android:textSize="@dimen/spacing_18"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/login_password" />

 </LinearLayout>

 </LinearLayout>
 </androidx.constraintlayout.widget.ConstraintLayout>
